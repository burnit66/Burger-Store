<div class="heading">
    <img class="burger-img" src="assets/img/burger.png">
    <h1>Eat the Burger!</h1>
</div>

<div class="container">

    <div class="add-burger-container">
        <h2>Add a Burger:</h2>
        <form class="add-burger">
            <div class="form-group">
                <label for="burger-name">Burger Name:</label>
                <input type="text" id="burger-name" name="burger-name">
                <button type="submit">Add Burger</button>
            </div>
        </form>
    </div>

    <div class="inner">
        <div class="burgers">
            <h2>Burgers ready to eat:</h2>
            <div>
                {{#each burgers}}
                {{#unless devoured}}
                    {{> burger/burger devoured=false}}
                {{/unless}}
                {{/each}}
            </div>
        </div>

        <div class="devoured">
            <h2>Burgers that have been devoured:</h2>
            <div>
                {{#each burgers}}
                {{#if devoured}}
                    {{> burger/burger devoured=true}}
                {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
</div>